<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 	android:background="@drawable/storelogoooooooooooo" >
 	
    
    <RelativeLayout
        android:id="@+id/welcomeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

         <ImageButton
             android:id="@+id/checkinskatespot"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/checkouttwitter"
             android:layout_marginLeft="51dp"
             android:src="@drawable/checkinskatespot" />

         <ImageButton
             android:id="@+id/checkoutprosetup"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/checkoutboards"
             android:layout_marginBottom="23dp"
             android:layout_toLeftOf="@+id/createboard"
             android:src="@drawable/checkprosetup" />

         <ImageButton
             android:id="@+id/createboard"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/checkouttwitter"
             android:layout_toRightOf="@+id/checkinskatespot"
             android:src="@drawable/createboard" />

         <ImageButton
             android:id="@+id/checkouttwitter"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/checkoutprosetup"
             android:layout_alignRight="@+id/createboard"
             android:src="@drawable/checkouttweet" />

         <ImageButton
             android:id="@+id/checkoutboards"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="141dp"
             android:layout_toLeftOf="@+id/createboard"
             android:src="@drawable/checkoutboards" />

          <ImageButton
              android:id="@+id/altBoards"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/checkoutboards"
              android:layout_alignRight="@+id/createboard"
              android:src="@drawable/altboard" />

    </RelativeLayout>


   
    
</RelativeLayout>
